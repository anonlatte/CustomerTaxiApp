<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/addressEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/address"
        tools:ignore="Autofill"
        android:inputType="text" />

    <EditText
        android:id="@+id/entranceEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/addressEdit"
        android:layout_alignBottom="@id/addressEdit"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/addressEdit"
        android:ems="10"
        android:hint="@string/entrance"
        tools:ignore="Autofill"
        android:inputType="numberDecimal"
        android:textSize="14sp" />

    <fragment
        android:id="@+id/destinationEdit"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressEdit"
        android:layout_marginTop="8dp"
        android:hint="@string/destination"
        tools:ignore="Autofill"
        android:inputType="text" />

    <Button
        android:id="@+id/wishesButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destinationEdit"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="@string/wishes" />

    <Spinner
        android:id="@+id/payTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/destinationEdit"
        android:layout_alignBottom="@id/wishesButton"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/wishesButton"
        android:entries="@array/pay_type" />

    <Button
        android:id="@+id/makeOrderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wishesButton"
        android:layout_alignStart="@+id/wishesButton"
        android:layout_alignEnd="@+id/payTypeSpinner"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="30dp"
        android:background="#FFEB3B"
        android:text="@string/make_order" />

</RelativeLayout>