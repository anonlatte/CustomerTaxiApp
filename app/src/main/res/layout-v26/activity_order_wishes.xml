<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/readyWishesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/ready" />

    <EditText
        android:id="@+id/commentEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/readyWishesButton"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="@string/comment_for_driver"
        android:importantForAutofill="no"
        android:inputType="textPersonName" />

    <CheckedTextView
        android:id="@+id/pendingOrderCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/commentEdit"
        android:layout_marginTop="8dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:text="@string/car_delivery"
        android:textSize="18sp" />

    <CheckedTextView
        android:id="@+id/orderForAnotherCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pendingOrderCheck"
        android:layout_marginTop="8dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:text="@string/order_for_another_men"
        android:textSize="18sp" />

</RelativeLayout>